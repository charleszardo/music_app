<h1>Bands</h1>
<% @bands.each do |band| %>
<p><%= link_to band.name, band_url(band) %></p>
<% end %>
<% if admin? %>
<%= link_to "Add Band", new_band_url %>
<% end %>

<%= form_tag bands_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
