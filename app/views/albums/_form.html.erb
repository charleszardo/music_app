<% action = album.persisted? ? album_url(album) : albums_url %>
<% method = album.persisted? ? :patch : :post %>
<form class="" action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <%= auth_token %>

  <label for="album_name">Title</label>
  <input type="text" name="album[title]" value="<%= album.title %>" id="album_name">
  <br>
  <label for="album_band">Band</label>
  <select name="album[band]" id="album_band">
    <% Band.all.each do |band| %>
      <option
        <%= "selected" if album.band == band %>
        value="<%= band.id %>">
        <%= band.name %>
      </option>
    <% end %>
  </select>
  <br>
  <label for="album_live_t">Live</label>
  <input type="radio" name="album[live]" value="true" id="album_live_t" <%= "checked" if album.live %>>
  <label for="album_live_f">Studio</label>
  <input type="radio" name="album[live]" value="false" id="album_live_f" <%= "checked" if !album.live %>>
  <br>
  <input type="submit" value="submit">
</form>
