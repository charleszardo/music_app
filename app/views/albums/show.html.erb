<h1><%= @album.title %></h1>
<h2>by <%= link_to @album.band_name, band_url(@album.band) %></h2>
<h3>album type: <%= @album.album_type %></h3>
<h3>Tracks</h3>
<% @album.tracks.each do |track| %>
  <p><%= link_to track.title, track_url(track) %></p>
<% end %>
<% if @album.is_owner?(current_user) %>
<%= link_to "Add Track", new_album_track_url(@album) %>
<br>
<%= link_to "Edit Album", edit_album_url %>
<%= link_to "Delete Album", @album, method: :delete %>
<% end %>
<%= render "tags/display", tags: @album.tags %>
<%= render "taggings/form", taggable_type: @album.class, taggable_id: @album.id %>
